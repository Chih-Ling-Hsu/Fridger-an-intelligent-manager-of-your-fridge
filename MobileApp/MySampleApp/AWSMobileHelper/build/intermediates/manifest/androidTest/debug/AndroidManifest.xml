<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amazonaws.mobilehelper.test" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.amazonaws.mobilehelper.test"
        android:targetPackage="com.amazonaws.mobilehelper.test" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.amazonaws.mobilehelper.auth.signin.SignInActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_sign_in" >
        </activity>
    </application>

</manifest>